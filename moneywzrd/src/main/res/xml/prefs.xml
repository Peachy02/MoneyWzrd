<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Enable Night Mode">

        <CheckBoxPreference
            android:title="Night Mode"
            android:key="NIGHT"
            android:summaryOff="Night mode is disabled"
            android:summaryOn="Night mode is enabled"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Screen Orientation">

        <ListPreference
            android:defaultValue="false"
            android:key="ORIENTATION"
            android:entries="@array/items_name"
            android:entryValues="@array/items_value"
            android:title="Orientation"/>

    </PreferenceCategory>


</PreferenceScreen>